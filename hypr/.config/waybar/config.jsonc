// -*- mode: jsonc -*-
{
	"layer": "top", // Waybar at top layer
	// "position": "left", // Waybar position (top|bottom|left|right)
	"height": 16, // Waybar height (to be removed for auto height)
	// "width": 8, // Waybar width
	"spacing": 8, // Gaps between modules (4px)
	"margin": "8px 8px 2px 8px",
	// Choose the order of the modules
	"modules-left": [
		"group/group-others",
		"group/group-hardware",
		"custom/update",
		"hyprland/window",
	],
	"modules-center": [
		"hyprland/workspaces",
	],
	"modules-right": [
		// "keyboard-state",
		"privacy",
		"mpd",
		"hyprland/submap",
		"custom/notification",
		"group/group-sliders",
		"group/group-connection",
		// "battery",
		// "upower",
		"clock",
		"tray",
		"group/group-power"
	],
	"group/group-hardware": {
		"orientation": "inherit",
		"drawer": {
			"click-to-reveal": true,
			"transition-duration": 500,
			"children-class": "group-child",
			"transition-left-to-right": true,
		},
		"modules": [
			"cpu", // First element is the "group leader" and won't ever be hidden
			"memory",
			"temperature",
			"load"
		]
	},
	"group/group-connection": {
		"orientation": "inherit",
		"modules": [
			"bluetooth",
			"network",
		]
	},
	"group/group-sliders": {
		"orientation": "inherit",
		"modules": [
			"pulseaudio",
			"backlight",
		]
	},
	"group/group-others": {
		"orientation": "inherit",
		"modules": [
			"idle_inhibitor",
			"power-profiles-daemon",
			"hyprland/language",
		]
	},
	"group/group-power": {
		"orientation": "inherit",
		"drawer": {
			"transition-duration": 500,
			"children-class": "not-power",
			"transition-left-to-right": false,
		},
		"modules": [
			"custom/power", // First element is the "group leader" and won't ever be hidden
			"custom/quit",
			"custom/lock",
			"custom/reboot",
		]
	},
	"hyprland/workspaces": {
		"disable-scroll": true,
		"all-outputs": true,
		"warp-on-scroll": false,
		"format": "{name}: {icon}",
		"format-icons": {
			"1": "ÔÑ†",
			"2": "Ôâ®",
			"3": "ÔÑ°",
			"4": "ÔÜº",
			"5": "ÔÅµ",
			"urgent": "ÔÅ™",
			"focused": "ÔÜí",
			"default": "ÔÑë"
		}
	},
	"hyprland/window": {
		"max-length": 200,
		"separate-outputs": true,
		"icons": true
	},
	"hyprland/language": {
		"format": "Û∞áß {}",
		"format-en": "en",
		"format-fa": "fa",
		"keyboard-name": "sonix-usb-device"
	},
	"hyprland/submap": {
		"format": "{}",
		"max-length": 8,
		"tooltip": false
	},
	"privacy": {
		"icon-spacing": 8,
		"icon-size": 14,
		"transition-duration": 250,
		"modules": [
			{
				"type": "screenshare",
				"tooltip": true,
				"tooltip-icon-size": 24
			},
			{
				"type": "audio-out",
				"tooltip": true,
				"tooltip-icon-size": 24
			},
			{
				"type": "audio-in",
				"tooltip": true,
				"tooltip-icon-size": 24
			}
		]
	},
	"mpris": {
		"format": "DEFAULT: {player_icon} {dynamic}",
		"format-paused": "DEFAULT: {status_icon} <i>{dynamic}</i>",
		"player-icons": {
			"default": "‚ñ∂",
			"mpv": "üéµ"
		},
		"status-icons": {
			"paused": "‚è∏"
		},
		// "ignored-players": ["firefox"]
	},
	"mpd": {
		"format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ‚∏®{songPosition}|{queueLength}‚∏© {volume}% ÔÄÅ",
		"format-disconnected": "Disconnected ÔÄÅ",
		"format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ÔÄÅ",
		"unknown-tag": "N/A",
		"interval": 5,
		"consume-icons": {
