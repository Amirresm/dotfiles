	"tray": {
		"icon-size": 16,
		"spacing": 10
	},
	"custom/notification": {
		"tooltip": true,
		"format": "{} {icon}",
		"format-icons": {
			"notification": "Û±Ö´",
			"none": "ÔÉ≥",
			"dnd-notification": "Ôá∂ ",
